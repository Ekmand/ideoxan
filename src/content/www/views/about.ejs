    <body>
        <%- include('./partials/nav.ejs') %>

        <%- include('./partials/headershort.ejs', {heading: __('about.pageName')}) %>

        <main id="container">
            <div class="contentdiv cd-type-0">
                <h1 class="heading"><%- __('about.contact.header') %></h1>
                <h2 class="subheading"><%- __('about.contact.subheader') %></h2>
                <div id="contactlist">
                    <button onclick="window.open('mailto:hello@ideoxan.com', '_blank') " class="button button-dark"><span class="mdi mdi-at ico-16px ico-white"></span> <%- __('about.contact.contactList.generalEmail') %></button>
                    <button onclick="window.open('mailto:hello@ideoxan.com', '_blank') " class="button button-dark"><span class="mdi mdi-at ico-16px ico-white"></span> <%- __('about.contact.contactList.billingEmail') %></button>
