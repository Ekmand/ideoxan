<% if (typeof link !== 'undefined') { %>
    <a class="ts nav-dropdown-item" href="<%- link %>">
        <svg class="ts icon nav-dropdown-item-icon" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <use xlink:href="/static/icons/feather-sprite.svg#<%- icon %>"></use>
        </svg>
        <div class="ts nav-dropdown-item-content">
            <div class="ts nav-dropdown-item-content-title"><%- title %></div>
            <div class="ts nav-dropdown-item-content-description">
                <%- description %>
            </div>
        </div>
    </a>
<% } else { %>
    <div class="ts nav-dropdown-item">
        <svg class="ts icon nav-dropdown-item-icon" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <use xlink:href="/static/icons/feather-sprite.svg#<%- icon %>"></use>
        </svg>
        <div class="ts nav-dropdown-item-content">
            <div class="ts nav-dropdown-item-content-title"><%- title %></div>
            <div class="ts nav-dropdown-item-content-description">
                <%- description %>
            </div>
            <% if (links.length > 0) { %>
            <ul class="ts nav-dropdown-item-content-link-container">
                <% for (let i = 0; i < links.length; i++) { %>
                <li><a class="ts nav-dropdown-item-content-link" href="<%- links[i].href %> "><%- links[i].name %></a></li>
                <% } %>
            </ul>
            <% } %>
        </div>
    </div>
<% } %>
