<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head.ejs', {title: reqUserDisplayName}) %>
        <link rel="stylesheet" type="text/css" href="/static/css/site.css">
    </head>
    <body>
        <%- include('./partials/nav.ejs') %>

        <%- include('./partials/headeruser.ejs', {heading: '' + reqUserDisplayName}) %>

        <main id="container">
            <div class="contentdiv cd-type-0" id="progress">
                <h1 class="heading"><%- __('user.profile.inProgress.header') %></h1>
                <h2 class="subheading"><%- __('user.profile.inProgress.subheader', reqUserDisplayName) %></h2>
                <div class="prog-container">
                    <% for (let i = 0; i < inProgress.length; i++) { %> 
                        <%- include('./partials/progress.ejs', {course: inProgress[i], index: i}) %>
                    <% } %>
                    <% if (inProgress.length < 1) { %>
                        <div class="prog-empty">
                            <span class="mdi mdi-heart-pulse ico-64px ico-white"></span>
                            <p class="prog-empty-header"><%- __('user.profile.empty.header') %></p>
                            <p class="prog-empty-subheader"><%- __('user.profile.empty.subheader') %></p>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="contentdiv cd-type-0">
                <h1 class="heading"><%- __('user.profile.completed.header') %></h1>
                <h2 class="subheading"><%- __('user.profile.completed.subheader', reqUserDisplayName) %></h2>
                <div class="prog-container">
                    <% for (let i = inProgress.length; i - inProgress.length < completed.length; i++) { %> 
                        <%- include('./partials/progress.ejs', {course: completed[i - inProgress.length], index: i}) %>
                    <% } %>
                    <% if (completed.length < 1) { %>
                        <div class="prog-empty">
                            <span class="mdi mdi-heart-pulse ico-64px ico-white"></span>
                            <p class="prog-empty-header"><%- __('user.profile.empty.header') %></p>
                            <p class="prog-empty-subheader"><%- __('user.profile.empty.subheader') %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>

        <!-- Scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.20.0/plugins/autoloader/prism-autoloader.min.js"></script>

        <script src="/static/js/index.js" type="text/javascript"></script>
        <script src="/static/js/utils.js" type="text/javascript"></script>
        <script src="/static/js/theme.js" type="text/javascript"></script>
    </body>
</html>