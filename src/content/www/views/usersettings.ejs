<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head.ejs', {title: __('user.settings.pageName')}) %>
        <link rel="stylesheet" type="text/css" href="/static/css/site.css">
    </head>
    <body>
        <%- include('./partials/nav.ejs') %>

        <%- include('./partials/headershort.ejs', {heading: __('user.settings.pageName')}) %>

        <main class="usersettings" id="container">
            <div class="contentdiv cd-type-0">
                <h1 class="heading"><%- __('user.settings.displayName.header') %></h1>
                <h2 class="subheading"><%- __('user.settings.displayName.subheader') %></h2>
                <p><b><%- __('user.settings.displayName.current') %>:</b> <%- displayName %></p>
                <form class="userupdateform" action="/api/v1/user/update" method="POST">
                    <div class="userupdateform-inputdiv">
                        <label><%- __('user.settings.displayName.form.displayName') %></label>
                        <input class="userupdateform-input" id="userupdateform-displayName" type="text" name="displayName" required>
                    </div>
                    <button type="submit" class="button button-primary" id="userupdate-displayname-bttn"><%- __('user.settings.displayName.form.button') %></button>
                </form>
            </div>
            <div class="contentdiv cd-type-0">
                <h1 class="heading"><%- __('user.settings.email.header') %></h1>
                <h2 class="subheading"><%- __('user.settings.email.subheader') %></h2>
                <p><b><%- __('user.settings.email.current') %>:</b> <%- email %></p>
                <form class="userupdateform" action="/api/v1/user/update" method="POST">
                    <div class="userupdateform-inputdiv">
                        <label><%- __('user.settings.email.form.oldEmail') %></label>
                        <input class="userupdateform-input" id="userupdateform-oldemail" type="email" name="oldemail" required>
                    </div>
                    <div class="userupdateform-inputdiv">
                        <label><%- __('user.settings.email.form.newEmail') %></label>
                        <input class="userupdateform-input" id="userupdateform-email" type="email" name="email" required>
                    </div>
                    <button type="submit" class="button button-primary" id="userupdate-email-bttn"><%- __('user.settings.email.form.button') %></button>
                </form>
            </div>
            <div class="contentdiv cd-type-0">
                <h1 class="heading"><%- __('user.settings.password.header') %></h1>
                <h2 class="subheading"><%- __('user.settings.password.subheader') %></h2>
                <form class="userupdateform" action="/api/v1/user/update" method="POST">
                    <div class="userupdateform-inputdiv">
                        <label><%- __('user.settings.password.form.currentPassword') %></label>
                        <input class="userupdateform-input" id="userupdateform-oldpwd" type="password" name="oldpassword" required>
                    </div>
                    <div class="userupdateform-inputdiv">
                        <label><%- __('user.settings.password.form.newPassword') %></label>
                        <input class="userupdateform-input" id="userupdateform-pwd" type="password" name="password" required>
                    </div>
                    <button type="submit" class="button button-primary" id="userupdate-pwd-bttn"><%- __('user.settings.password.form.button') %></button>
                </form>
            </div>
            <div class="usersettings-split"></div>
            <div class="contentdiv cd-type-0 usersettings-newline">
                <h1 class="heading"><%- __('user.settings.deleteAccount.header') %></h1>
                <div class="dangerzone">
                    <p><%- __('user.settings.deleteAccount.info', '<a href="/privacy">' + __('privacy.pageName') + '</a>') %></p>
                    <form class="userupdateform" action="/api/v1/user/delete" method="POST">
                        <button type="submit" class="button button-danger" id="userupdate-delete-bttn"><%- __('user.settings.deleteAccount.button') %></button>
                    </form>
                </div>
                <% if (messages.error) { %>
                    <div class="toast toast-error"><%= messages.error %></div>
                    <script>
                        setTimeout(() => {
                            document.getElementsByClassName('toast')[0].style.animation = "toastIn 1200ms ease-in-out"
                            document.getElementsByClassName('toast')[0].style.top = "90vh"
                            document.getElementsByClassName('toast')[0].style.opacity = "1"
                        }, 1000)
                        setTimeout(() => {
                                document.getElementsByClassName('toast')[0].style.animation = "toastOut 1200ms ease-in-out"
                                document.getElementsByClassName('toast')[0].style.top = "120vh"
                                document.getElementsByClassName('toast')[0].style.opacity = "0"
                        }, 8500);
                    </script>
                <% } %>
                <% if (messages.success) { %>
                    <div class="toast toast-success"><%= messages.success %></div>
                    <script>
                        setTimeout(() => {
                            document.getElementsByClassName('toast')[0].style.animation = "toastIn 1200ms ease-in-out"
                            document.getElementsByClassName('toast')[0].style.top = "90vh"
                            document.getElementsByClassName('toast')[0].style.opacity = "1"
                        }, 1000)
                        setTimeout(() => {
                                document.getElementsByClassName('toast')[0].style.animation = "toastOut 1200ms ease-in-out"
                                document.getElementsByClassName('toast')[0].style.top = "120vh"
                                document.getElementsByClassName('toast')[0].style.opacity = "0"
                        }, 8500);
                    </script>
                <% } %>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>

        <!-- Scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.20.0/plugins/autoloader/prism-autoloader.min.js"></script>

        <script src="/static/js/index.js" type="text/javascript"></script>
        <script src="/static/js/utils.js" type="text/javascript"></script>
        <script src="/static/js/theme.js" type="text/javascript"></script>
    </body>
</html>