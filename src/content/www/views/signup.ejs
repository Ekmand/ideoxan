<!DOCTYPE html>
<html style="overflow: hidden">
    <head>
        <%- include('./partials/head.ejs', {title: __('signup.pageName')}) %>
        <link rel="stylesheet" type="text/css" href="/static/css/site.css">

        <script src="https://www.google.com/recaptcha/api.js?hl=<%- getLocale() %>" async defer></script>
    </head>
    <body>
        <%- include('./partials/nav.ejs', locals) %>

        <main id="body-fullwh" class="inner-align-center">
            <div class="contentdiv cd-type-0 logincdiv box-align-center">
                <h1 class="heading logintitle"><%- __('signup.header') %></h1>
                <h2 class="subheading logintitle"><%- __('signup.subheader') %></h2>
                <form class="loginform" method="POST">
                    <div class="loginform-inputdiv">
                        <input class="loginform-input" id="loginform-email" type="email" name="email" required autofocus>
                        <label><%- __('signup.forms.email') %></label>
                    </div>

                    <div class="loginform-inputdiv">
                        <input class="loginform-input" id="loginform-displayName" type="text" name="displayName" required>
                        <label><%- __('signup.forms.displayName') %></label>
                    </div>
                    
                    <div class="loginform-inputdiv">
                        <input class="loginform-input" id="loginform-pwd" type="password" name="password" required>
                        <label><%- __('signup.forms.password') %></label>
                    </div>
                    <div class="g-recaptcha" data-sitekey="6LeexrQZAAAAAFDKPK27NJyuHa9iGZAAGZNkm0-B" data-theme="dark" data-callback="verifyLogin"></div>

                    <button type="button" class="button button-disabled" id="upwdsu"><%- __('signup.forms.button') %> <span class="mdi mdi-key-variant ico-14px"></span></button>
                    <p class="loginform-discl"><%- __('signup.agreement', '<br><a href="/tos">' + __('tos.pageName') + '</a>', '<a href="/privacy">' + __('privacy.pageName') + '</a>') %></p>
                </form>
                <% if (messages.error) { %>
                    <div class="toast toast-error"><%= messages.error %></div>
                    <script>
                        setTimeout(() => {
                            document.getElementsByClassName('toast')[0].style.animation = "toastIn 1200ms ease-in-out"
                            document.getElementsByClassName('toast')[0].style.top = "90vh"
                            document.getElementsByClassName('toast')[0].style.opacity = "1"
                        }, 1000)
                        setTimeout(() => {
                                document.getElementsByClassName('toast')[0].style.animation = "toastOut 1200ms ease-in-out"
                                document.getElementsByClassName('toast')[0].style.top = "120vh"
                                document.getElementsByClassName('toast')[0].style.opacity = "0"
                        }, 8500);
                    </script>
                <% } %>
            </div>
        </main>

        <!-- Scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.20.0/plugins/autoloader/prism-autoloader.min.js"></script>

        <script src="/static/js/index.js" type="text/javascript"></script>
        <script src="/static/js/utils.js" type="text/javascript"></script>
        <script src="/static/js/theme.js" type="text/javascript"></script>
    </body>
</html>